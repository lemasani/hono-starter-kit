{
  "name": "hono-starter-kit",
  "type": "module",
  "version": "1.0.0",
  "description": "Production-ready Hono.js starter with TypeScript, Drizzle ORM, Better-Auth, and OpenAPI",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "tsc && tsc-alias",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "openapi:auth": "open-cli http://localhost:3000/api/auth/reference",
    "openapi:docs": "open-cli http://localhost:3000/reference"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.2",
    "@hono/zod-openapi": "^1.0.2",
    "@scalar/hono-api-reference": "^0.9.13",
    "better-auth": "^1.3.6",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.9.1",
    "hono-pino": "^0.10.1",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "stoker": "2.0.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "open-cli": "^8.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
